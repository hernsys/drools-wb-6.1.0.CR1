<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:gwt="urn:import:com.google.gwt.user.client.ui">

  <ui:with field="i18n" type="org.drools.workbench.screens.guided.dtable.client.resources.i18n.GuidedDecisionTableConstants" />
  <ui:with field="ufImages" type="org.uberfire.client.resources.CommonImages" />
  <ui:with field="images" type="org.kie.workbench.common.widgets.client.resources.CommonImages" />
  <ui:with field="res" type="org.kie.workbench.common.widgets.client.resources.WizardResources" />

  <gwt:VerticalPanel ui:field="container" width="100%">
    <gwt:VerticalPanel>
      <gwt:Label text="{i18n.DecisionTableWizardDescriptionImportsPage}" styleName="{res.css.wizardDTableCaption}"/>
      <gwt:HorizontalPanel>
        <gwt:VerticalPanel>
          <gwt:SimplePanel>
            <gwt:Label text="{i18n.DecisionTableWizardAvailableImports}" styleName="{res.css.wizardDTableHeader}" />
          </gwt:SimplePanel>
          <gwt:ScrollPanel ui:field="availableImportsContainer" styleName="{res.css.wizardDTableList}" height="260px" width="280px" />
        </gwt:VerticalPanel>
        <gwt:VerticalPanel ui:field="buttonBar" styleName="{res.css.wizardDTableButtons}">
          <gwt:PushButton ui:field="btnAdd" enabled="false">&gt;&gt;</gwt:PushButton>
          <gwt:PushButton ui:field="btnRemove" enabled="false">&lt;&lt;</gwt:PushButton>
        </gwt:VerticalPanel>
        <gwt:VerticalPanel>
          <gwt:SimplePanel>
            <gwt:Label text="{i18n.DecisionTableWizardChosenImports}" styleName="{res.css.wizardDTableHeader}" />
          </gwt:SimplePanel>
          <gwt:ScrollPanel ui:field="chosenImportsContainer" styleName="{res.css.wizardDTableList}" height="260px" width="280px" />
        </gwt:VerticalPanel>
      </gwt:HorizontalPanel>
    </gwt:VerticalPanel>
  </gwt:VerticalPanel>

</ui:UiBinder>