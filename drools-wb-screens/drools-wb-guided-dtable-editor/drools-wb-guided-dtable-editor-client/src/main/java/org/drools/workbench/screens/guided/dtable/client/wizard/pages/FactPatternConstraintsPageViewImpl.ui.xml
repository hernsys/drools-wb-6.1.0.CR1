<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
  xmlns:gwt='urn:import:com.google.gwt.user.client.ui'
  xmlns:c="urn:import:org.uberfire.client.common"
  xmlns:b="urn:import:com.github.gwtbootstrap.client.ui">

  <ui:with field="i18n" type="org.drools.workbench.screens.guided.dtable.client.resources.i18n.GuidedDecisionTableConstants" />
  <ui:with field="ufImages" type="org.uberfire.client.resources.CommonImages" />
  <ui:with field="images" type="org.kie.workbench.common.widgets.client.resources.CommonImages" />
  <ui:with field="res" type="org.kie.workbench.common.widgets.client.resources.WizardResources" />

  <gwt:VerticalPanel ui:field="container" width="100%">
    <gwt:HorizontalPanel ui:field="msgDuplicateBindings" styleName="{res.css.wizardDTableMessageContainer}" visible="false">
      <gwt:HorizontalPanel>
        <gwt:Image resource="{ufImages.warningLarge}" />
        <gwt:Label text="{i18n.DecisionTableWizardDuplicateBindings}" styleName="{res.css.wizardDTableMessage}" />
      </gwt:HorizontalPanel>
    </gwt:HorizontalPanel>
    <gwt:HorizontalPanel ui:field="msgIncompleteConditions" styleName="{res.css.wizardDTableMessageContainer}" visible="false">
      <gwt:HorizontalPanel>
        <gwt:Image resource="{ufImages.warningLarge}" />
        <gwt:Label text="{i18n.DecisionTableWizardIncompleteConditions}" styleName="{res.css.wizardDTableMessage}" />
      </gwt:HorizontalPanel>
    </gwt:HorizontalPanel>
    <gwt:VerticalPanel>
      <gwt:Label text="{i18n.DecisionTableWizardDescriptionFactPatternConstraintsPage}" styleName="{res.css.wizardDTableCaption}"/>
      <gwt:HorizontalPanel>
        <gwt:VerticalPanel>
          <gwt:SimplePanel>
            <gwt:Label text="{i18n.DecisionTableWizardAvailableTypes}" styleName="{res.css.wizardDTableHeader}" />
          </gwt:SimplePanel>
          <gwt:ScrollPanel ui:field="availablePatternsContainer" styleName="{res.css.wizardDTableList}" height="220px" width="180px" />
        </gwt:VerticalPanel>
        <gwt:VerticalPanel>
          <gwt:SimplePanel>
            <gwt:Label text="{i18n.DecisionTableWizardAvailableFields}" styleName="{res.css.wizardDTableHeader}" />
          </gwt:SimplePanel>
          <gwt:ScrollPanel ui:field="availableFieldsContainer" styleName="{res.css.wizardDTableList}" height="220px" width="180px" />
        </gwt:VerticalPanel>
        <gwt:VerticalPanel ui:field="buttonBar" styleName="{res.css.wizardDTableButtons}">
          <gwt:PushButton ui:field="btnAdd" enabled="false">&gt;&gt;</gwt:PushButton>
          <gwt:PushButton ui:field="btnRemove" enabled="false">&lt;&lt;</gwt:PushButton>
        </gwt:VerticalPanel>
        <gwt:VerticalPanel>
          <gwt:SimplePanel>
            <gwt:Label text="{i18n.DecisionTableWizardChosenConditions}" styleName="{res.css.wizardDTableHeader}" />
          </gwt:SimplePanel>
          <gwt:ScrollPanel ui:field="chosenConditionsContainer" styleName="{res.css.wizardDTableList}" height="220px" width="180px" />
        </gwt:VerticalPanel>
        <gwt:VerticalPanel styleName="{res.css.wizardDTableButtons}">
          <gwt:PushButton ui:field="btnMoveUp" enabled="false" />
          <gwt:PushButton ui:field="btnMoveDown" enabled="false" />
        </gwt:VerticalPanel>
      </gwt:HorizontalPanel>
      <gwt:VerticalPanel ui:field="conditionDefinition" visible="false">
        <gwt:HorizontalPanel ui:field="calculationType" styleName="{res.css.wizardDTableFieldContainerValid">
          <gwt:Label text="{i18n.CalculationType}:" styleName="{res.css.wizardDTableFields}" />
          <b:RadioButton name="calculationType" text="{i18n.LiteralValue}" ui:field="optLiteral" enabled="false" styleName="{res.css.wizardDTableFields}" />
          <b:RadioButton name="calculationType" text="{i18n.Formula}" ui:field="optFormula" enabled="false" styleName="{res.css.wizardDTableFields}" />
          <b:RadioButton name="calculationType" text="{i18n.Predicate}" ui:field="optPredicate" enabled="false" styleName="{res.css.wizardDTableFields}" />
        </gwt:HorizontalPanel>
        <gwt:HorizontalPanel ui:field="columnHeaderContainer" styleName="{res.css.wizardDTableFieldContainerValid">
          <gwt:Label text="{i18n.ColumnHeaderDescription}" styleName="{res.css.wizardDTableFields}" />
          <gwt:TextBox ui:field="txtColumnHeader" enabled="false" styleName="{res.css.wizardDTableFields}" />
          <gwt:Image resource="{images.mandatory}" title="{i18n.MandatoryField}" styleName="{res.css.wizardDTableFields}" />
        </gwt:HorizontalPanel>
        <gwt:HorizontalPanel ui:field="predicateExpressionContainer" styleName="{res.css.wizardDTableFieldContainerValid}" visible="false">
          <gwt:Label text="{i18n.DecisionTableWizardPredicateExpression}" styleName="{res.css.wizardDTableFields}" />
          <gwt:TextBox ui:field="txtPredicateExpression" enabled="false" styleName="{res.css.wizardDTableFields}" />
          <c:InfoPopup styleName="{res.css.wizardDTableFields}" title="{i18n.Predicates}" message="{i18n.PredicatesInfo}"/>
        </gwt:HorizontalPanel>
        <gwt:HorizontalPanel ui:field="operatorContainer" styleName="{res.css.wizardDTableFieldContainerValid}">
          <gwt:Label text="{i18n.Operator}" styleName="{res.css.wizardDTableFields}" />
          <gwt:SimplePanel ui:field="ddOperatorContainer" />
          <gwt:Image resource="{images.mandatory}" title="{i18n.MandatoryField}" styleName="{res.css.wizardDTableFields}" />
        </gwt:HorizontalPanel>
        <gwt:VerticalPanel ui:field="criteriaExtendedEntry">
          <gwt:HorizontalPanel styleName="{res.css.wizardDTableFieldContainerValid}">
            <gwt:Label text="{i18n.optionalValueList}" styleName="{res.css.wizardDTableFields}" />
            <gwt:TextBox ui:field="txtValueList" enabled="false" styleName="{res.css.wizardDTableFields}" />
            <c:InfoPopup styleName="{res.css.wizardDTableFields}" title="{i18n.ValueList}" message="{i18n.ValueListsExplanation}"/>
          </gwt:HorizontalPanel>
          <gwt:HorizontalPanel ui:field="defaultValueContainer" styleName="{res.css.wizardDTableFieldContainerValid}">
            <gwt:Label text="{i18n.DefaultValue}:" styleName="{res.css.wizardDTableFields}" />
            <gwt:SimplePanel ui:field="defaultValueWidgetContainer" styleName="{res.css.wizardDTableFields}" />
          </gwt:HorizontalPanel>
        </gwt:VerticalPanel>
        <gwt:VerticalPanel ui:field="criteriaLimitedEntry">
          <gwt:HorizontalPanel ui:field="limitedEntryValueContainer" styleName="{res.css.wizardDTableFieldContainerValid}">
            <gwt:Label text="{i18n.LimitedEntryValue}" styleName="{res.css.wizardDTableFields}" />
            <gwt:SimplePanel ui:field="limitedEntryValueWidgetContainer" styleName="{res.css.wizardDTableFields}" />
            <gwt:Image resource="{images.mandatory}" title="{i18n.MandatoryField}" styleName="{res.css.wizardDTableFields}" />
          </gwt:HorizontalPanel>
        </gwt:VerticalPanel>
      </gwt:VerticalPanel>
    </gwt:VerticalPanel>
  </gwt:VerticalPanel>

</ui:UiBinder>